<% wrap_layout :layout do %>
    <div class="container scheme" id="<%= current_page.data.scheme.id %>">
        <span class="title"><%= current_page.data.scheme.name %></span>
        <span class="comp">for Komodo <%= current_page.data.scheme.comp %></span>
        <div class="content">
            <%= yield %>
        </div>
        <div class="links">
            <p>
                <a class="github" href="//github.com/Defman21/<%= current_page.data.scheme.repo %>"><i class="fa fa-github"></i> Source code</a>
            </p>
            <p>
                <a class="github" href="//github.com/Defman21/<%= current_page.data.scheme.repo %>/releases/latest"><i class="fa fa-github"></i> Latest release</a>
            </p>
            <p>
                <a class="package" href="//komodoide.com/packages/schemes/<%= current_page.data.scheme.id %>"><i class="fa fa-download"></i> Package</a>
            </p>
            <%= partial :links %>
        </div>
        <%= partial :comments %>
    </div>
<% end %>
