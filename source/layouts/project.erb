<% wrap_layout :layout do %>
    <div class="container project" id="<%= current_page.data.project.id %>">
        <span class="title"><%= current_page.data.project.name %></span>
        <span class="language"><%= current_page.data.project.lang %></span>
        <span class="tags"><i class="fa fa-tags"></i> <%= current_page.data.tags || "no tags" %></span>
        <div class="content">
            <%= yield %>
        </div>
        <div class="links">
            <p>
                <a class="github" href="//github.com/Defman21/<%= current_page.data.project.repo %>"><i class="fa fa-github"></i> Source code</a>
            </p>
            <p>
                <a class="github" href="//github.com/Defman21/<%= current_page.data.project.repo %>/releases/latest"><i class="fa fa-github"></i> Latest release</a>
            </p>
            <%= partial "_links" %>
        </div>
    </div>
<% end %>
